{
    "name": "dansmaculotte/laposte-php",
    "description": "PHP SDK for La Poste API",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laposte",
        "laposte-api"
    ],
    "authors": [
        {
            "name": "GaÃ«l Reyrol",
            "email": "gael@dansmaculotte.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "DansMaCulotte\\LaPoste\\": "src/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^8.2"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "coverage": "@php vendor/bin/phpunit --coverage-html coverage",
        "format": "@php vendor/bin/php-cs-fixer fix --config .php_cs.php"
    },
    "config": {
        "sort-packages": true
    }
}
